  <!--main content-->
<div class="main-content">
 <nav class="navbar navbar-expand-lg bg-light navbar-light d-flex justify-content-between">

  
  
  
  <!-- Links -->
  <ul class="navbar-nav">
    <li class="nav-item">
     
