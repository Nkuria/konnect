  <div class="text-center">
  <p class="m-auto"><%= @user.followed_users.count%></p>
  <h6>Following</h6>
  </div>
  
  </div>

<div class="profile_name  list-group-item list-group-item-action"><%= render 'single_following'%></div>

   <h6 class='text-gray  list-group-item list-group-item-action'>Followed_by</h6>
    
  <% User.followed_by(@user.id).each do |u|%>
 
  
 
   <li class="nav-link text-dark">
    <%= link_to user_path(u), class: "nav-link text-dark" do %>
          
  <img src="<%=u.Photo%>" class="profile_photo"/> <%= u.Username %>
  <% end %>
  </li>
  <br>

           <% end %>
   
  
